@model CharacterBuilder.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register";
}

<div class="container-fluid full-width-container">
    <div class="row">
        <div class="logincard">
            <div class="pmd-card pmd-card-inverse pmd-z-depth-5">
                <div class="login-card">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="pmd-card-title card-header-border text-center">
                            <h3> <strong>Sign up for your Adventure!</strong></h3>
                        </div>
                        <div class="pmd-card-body">
                            @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
                            {
                                @Html.ValidationSummary("", new { @class = "alert-danger", role = "alert" })
                            }
                            <div class="form-group pmd-textfield pmd-textfield-floating-label">
                                @Html.LabelFor(model => model.Email, new {@class = "control-label pmd-input-group-label"})
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="material-icons md-dark pmd-sm">email</i>
                                    </div>
                                    @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control"}})
                                </div>
                            </div>

                            <div class="form-group pmd-textfield pmd-textfield-floating-label">
                                @Html.LabelFor(model => model.Password, new {@class = "control-label pmd-input-group-label"})
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="material-icons md-dark pmd-sm">lock_outline</i>
                                    </div>
                                    @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "form-control"}})
                                </div>
                            </div>
                        </div>

                        <div class="pmd-card-footer card-footer-no-border card-footer-p16 text-center">
                            <button type="submit" class="btn pmd-ripple-effect btn-primary btn-block">Sign up</button>
                            <p class="redirection-link">
                                @Html.ActionLink("Already an Adventurer?", "Login", new { @class = "login-register" })
                            </p>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>


</div>

